<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    ></script>
    <title>Download | File Sharing</title>
    <style>
      form{ padding: 30px 25px 30px 30px; box-shadow: 4px 4px 5px 6px grey;
      background-color: rgb(205, 222, 227); } h2{ color: purple; font-weight:
      bolder; } .link{ color: blue; border: 2px solid grey; padding-left: 3px;
      padding-top: 3px; padding-bottom: 3px; } a, a:hover{ color: white;
      text-decoration: none; }
    </style>
  </head>
  <body>
    <div class="row">
      <div class="col-sm-3"></div>
      <div class="col-sm-6" style="margin-top: 50px;">
        <center><form>
            <h2>File Download Page</h2><hr />
            <h5 style="color: darkgreen">Link will expires in 24 hours!</h5>
            {{#if fileName}}
              <h5> {{fileName}}</h5>
              <h5> {{fileSize}} MB</h5>
              <p class="link">{{download}}</p>
              <button type="button" class="btn btn-success"><a
                  href="{{download}}"
                >Download</a></button>
            {{else}}
              <h4 style="color: red;"><b>{{error}}</b></h4>
            {{/if}}
          </form></center>
      </div>
      <div class="col-sm-3"></div>
    </div>
  </body>
</html>