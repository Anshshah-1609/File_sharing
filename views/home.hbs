<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Home | File Sharing</title>
    <style>
      form{ padding: 30px 0px 30px 30px; box-shadow: 4px 4px 5px 6px grey;
      font-size: 18px; background-color: rgb(205, 222, 227); } h2{ color:
      purple; font-weight: bolder; }
    </style>
  </head>
  <body>
    <div class="row">
      <div class="col-sm-3"></div>
      <div class="col-sm-6" style="margin-top: 50px;">
        <form action="/api/file" enctype="multipart/form-data" method="POST">
          <img
            src="https://cdn2.iconfinder.com/data/icons/cloud-computing-storage/48/upload-file-512.png"
            height="100px"
            width="100px"
          />
          <br />
          <h2>Please upload your file here!!</h2><hr>
          <input type="file" name="myImage" /><br /><br />
          <input type="submit" class="btn btn-success" value="Upload" />
        </form>
      </div>
      <div class="col-sm-3"></div>
    </div>
  </body>
</html>